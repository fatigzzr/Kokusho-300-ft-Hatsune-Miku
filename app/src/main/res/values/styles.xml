<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="DefaultText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="KanjiBox" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="RectangularShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="gameSongText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recordText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recordBlackText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlHighlight">@color/red_transparent</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
</resources>